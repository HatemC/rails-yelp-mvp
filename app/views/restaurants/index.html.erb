<div class="container">
<h1>List of restaurants</h1>
<% @restaurants.each do |restaurant| %>
 <ul>

  <li>
    Name: <%= restaurant.name %> - Adress: <%= restaurant.address %> - Category: <%= restaurant.category %>
    <%=  link_to 'details', restaurant_path(restaurant)  %>
  </li>
</ul>
<% end %>


<%= link_to 'Add new restaurant', new_restaurant_path, class: "btn btn-primary"%>
</div>
