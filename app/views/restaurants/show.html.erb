<div class="container">

<h1> <%= @restaurant.name %> </h1>
<h2> Adress <%= @restaurant.address  %></h2>
<h2> Category <%= @restaurant.category  %></h2>
<h2>Reviews</h2>
<% @restaurant.reviews.each do |review| %>
<p> <%= review.content %>,  Rating: <%= review.rating %></p>
<% end %>
<%= link_to 'back to list', restaurants_path %> |



<%= simple_form_for [@restaurant, @review] do |f| %>
<%= f.input :content  %>
<%= f.input :rating %>
<%= f.submit 'post your review', class: "btn btn-primary" %>
<% end %>

</div>
